- @dogs.each do |dog|
  .row
    .col-md-8.col-md-offset-2.col-sm-12.col-xs-12
      .well
        .row
          .col-md-3
            .text-center
              %br/
              = image_tag dog.picture.url(:thumb)
            .text-center
              = link_to dog.name, dog, style: 'font-size:200%'
              %br/
          .col-md-9
            .row
              %br/
              .col-md-10.col-md-offset-1.col-xs-10.col-xs-offset-1
                = link_to  feed_dog_path(dog), method: :post, class: 'btn btn-primary btn-lg btn-block' do
                  .row
                    .col-md-4.col-sm-4.col-xs-4
                      %i.fa.fa-flash{style: 'padding-right:20px'}
                    .col-md-4.col-sm-4.col-xs-4
                      .text-center
                        Feed
                    .col-md-4.col-sm-4.col-xs-4
                      #{(dog.feed_logs_today.count)}
                      %i.fa.fa-long-arrow-right
                      #{(dog.feed_logs_today.count + 1)}
                %br/
                = link_to walk_dog_path(dog), method: :post, class: 'btn btn-success btn-lg btn-block' do
                  .row
                    .col-md-4.col-sm-4.col-xs-4
                      %i.fa.fa-leaf{style: 'padding-right:20px'}
                    .col-md-4.col-sm-4.col-xs-4
                      .text-center
                        Walk
                    .col-md-4.col-sm-4.col-xs-4
                      #{(dog.walk_logs_today.count)}
                      %i.fa.fa-long-arrow-right
                      #{(dog.walk_logs_today.count + 1)}
                %br/