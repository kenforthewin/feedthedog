- @dogs.each do |dog|
  .row
    .col-md-6.col-md-offset-3.col-sm-12.col-xs-12
      .row
        .col-md-12
          .text-center
            .panel.panel-default
              = link_to dog.name, dog, style: 'font-size:200%'
              .text-center
                = image_tag dog.picture.url(:medium)
              %br/
              .row
                .col-md-10.col-md-offset-1.col-xs-10.col-xs-offset-1
                  = link_to "Feed #{dog.name} #{dog.pronoun} #{(dog.feed_logs_today.count + 1).ordinalize} meal", feed_dog_path(dog), method: :post, class: 'btn btn-primary btn-lg btn-block'
                  %br/
                  = link_to "Take #{dog.name} on #{dog.pronoun} #{(dog.walk_logs_today.count + 1).ordinalize} walk", walk_dog_path(dog), method: :post, class: 'btn btn-success btn-lg btn-block'
              %br/